APP_NAME="Certificaciones Inmov"
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=your-database-host.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=certificaciones_mails
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_CDN_DOMAIN=https://your-cdn-domain.com
MAX_FILE_SIZE=10485760
PRESIGNED_URL_EXPIRATION=3600

# Development Configuration
DEBUG=*
LOG_LEVEL=debug
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

#Sendgrid Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_API_KEY=your-sendgrid-api-key 
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-sender-email@domain.com
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=3d

# File Storage
UPLOADS_DIR=./uploads

# Configuración de rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# API Prefix
API_PREFIX=api/v1

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE=./logs/app.log